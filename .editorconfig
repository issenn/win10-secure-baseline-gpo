# EditorConfig is awesome:
# http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use 4 spaces for indentation in Markdown files
[*.md]
indent_style = unset
indent_size = unset
end_of_line = lf
trim_trailing_whitespace = unset
insert_final_newline = unset

[*.gpo.txt]
end_of_line = crlf

[*.{xml,xsd}]
indent_style = space
indent_size = 2
end_of_line = lf

[*.go]
indent_style = tab
indent_size = 4
tab_width = 8
end_of_line = lf

[*.json]
indent_style = space
indent_size = 2
